//https://www.codewars.com/kata/57b58827d2a31c57720012e8/train/javascript

function fuelPrice(litres, pricePerLitre) {
  if (litres >= 2 && litres < 4) return +(litres * (pricePerLitre - 0.05)).toFixed(2);
  if (litres >= 4 && litres < 6) return +(litres * (pricePerLitre - 0.10)).toFixed(2);
  if (litres >= 6 && litres < 8) return +(litres * (pricePerLitre - 0.15)).toFixed(2);
  if (litres >= 8 && litres < 10) return +(litres * (pricePerLitre - 0.20)).toFixed(2);
  if (litres >= 10) return +(litres * (pricePerLitre - 0.25)).toFixed(2);
}
