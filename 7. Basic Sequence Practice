//https://www.codewars.com/kata/5436f26c4e3d6c40e5000282/solutions/javascript/me/best_practice


function sumOfN(n) {
if (n === 0) return [0];
let arr = [], num = 0, sum = 0;
  if (n > 0){
    for (let i = 0; i <= n; i++){
      sum = sum + num;
      arr.push(sum);
      num = num + 1;}
  } else if (n < 0){
      for (let i = 0; i >= n; i--){
        sum = sum + num;
        arr.push(sum);
        num = num - 1;}
  }
  console.log(arr);
  return arr;
}
